<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.TimeFragment">

        <ImageButton
            android:layout_width="240dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_alarm_on_black_24dp"
            android:id="@+id/imageButton"
            android:background="@android:drawable/alert_light_frame"
            android:contentDescription="@string/time_start"
            app:layout_constraintLeft_toLeftOf="@+id/activity_time"
            android:layout_marginStart="16dp"
            app:layout_constraintRight_toRightOf="@+id/activity_time"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/activity_time"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeView"
            app:layout_constraintLeft_toLeftOf="@+id/activity_time"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/activity_time"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/activity_time"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            android:layout_marginBottom="8dp"
            />

    </android.support.constraint.ConstraintLayout>
</layout>

